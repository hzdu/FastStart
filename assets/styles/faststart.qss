/* 对话框样式 */
QDialog {
    background-color: #1a1a1a;
    border: none;
}

/* 表单输入样式 */
QLineEdit, QSpinBox {
    background-color: #2d2d2d;
    border: none;
    border-radius: 6px;
    padding: 6px;
    color: #ffffff;
}

/* 输入框焦点边框 */
QLineEdit:focus, QSpinBox:focus {
    border: 1px solid #007acc;
}

/* 文件对话框样式 */
QFileDialog {
    background-color: #1a1a1a;
    border: none;
}

/* 按钮框样式 */
QHBoxLayout, QFormLayout {
    background-color: transparent;
}

/* 错误提示样式 */
QLabel[styleClass="error"] {
    color: #ff4444;
    background-color: #441111;
    border-radius: 6px;
    padding: 5px;
}

/* 滚动条样式 */
QScrollBar:vertical {
    background: #2d2d2d;
    width: 12px;
}

QScrollBar::handle:vertical {
    background: #4a4a4a;
    min-height: 20px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

/* 分割器样式 */
QSplitter::handle:horizontal {
    background: #2d2d2d;
    width: 2px;
}

QSplitter::handle:vertical {
    background: #2d2d2d;
    height: 2px;
}

/* 旋钮样式 */
QSpinBox::up-button, QSpinBox::down-button {
    background-color: #3a3a3a;
    border: none;
    width: 20px;
}

QSpinBox::up-arrow, QSpinBox::down-arrow {
    border: none;
}

/* 输入框选择状态 */
QLineEdit:focus {
    selection-background-color: #007acc;
}

/* 选择框样式 */
QCheckBox {
    spacing: 5px;
    color: #ffffff;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked {
    image: url('assets/images/check-off.png');
    border: none;
    background-color: transparent;
}

QCheckBox::indicator:checked {
    image: url('assets/images/check-on.png');
    border: none;
    background-color: transparent;
}

